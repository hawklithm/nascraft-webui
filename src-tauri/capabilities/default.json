{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:default",
    "core:path:default",
    "core:path:allow-resolve-directory",
    "os:default",
    "dialog:default",
    "dialog:allow-open",
    "http:default",
    "http:allow-fetch",
    "fs:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOG/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$HOME_DIR/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOG/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$HOME_DIR/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOG/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$HOME_DIR/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOG/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$HOME_DIR/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOG/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOG/**" },
        { "path": "$APPCACHE/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$HOME_DIR/**" },
        { "path": "$APPDATA/org.hawklithm.nascraft/**" }
      ]
    },
    "fs:allow-unwatch"
  ]
}